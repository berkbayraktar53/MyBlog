@model Message
@{
    ViewData["Title"] = "Mesaj Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <h5>Mesaj Düzenle</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="MessageId" />
                        <input type="hidden" asp-for="AddedDate" />
                        <input type="hidden" asp-for="ModifiedDate" />
                        <input type="hidden" asp-for="ReceiverId" />
                        <input type="hidden" asp-for="SenderId" />
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Gönderilecek Yazar</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.SenderId, (List<SelectListItem>)ViewBag.users, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mesaj Konusu</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Subject" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="Subject"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mesaj İçeriği</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" rows="4" cols="50" asp-for="Detail"></textarea>
                                <span class="form-text m-b-none text-danger" asp-validation-for="Detail"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-11 col-sm-offset-2 text-center">
                                <a href="/Admin/Message/InBox" class="btn btn-info btn-sm" type="submit">İptal</a>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>