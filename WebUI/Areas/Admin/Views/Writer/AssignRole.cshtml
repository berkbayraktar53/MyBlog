@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "Rolleri Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <h5>Rolleri Düzenle</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-action="AssignRole">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Yazarın Sahip Olduğu Roller&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-hand-o-right"></i></label>
                            <div class="col-sm-8">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="i-checks">
                                        <input type="hidden" asp-for="@Model[i].RoleId" />
                                        <input type="hidden" asp-for="@Model[i].Name" />
                                        <label>
                                            <input type="checkbox" asp-for="@Model[i].Exists" /> <i></i> @Model[i].Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-11 col-sm-offset-2 text-center">
                                <a href="/Admin/Writer/Index" class="btn btn-info btn-sm" type="submit">İptal</a>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>