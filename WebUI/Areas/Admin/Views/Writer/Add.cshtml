@model User
@{
    ViewData["Title"] = "Yazar Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <h5>Yazar Ekle</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-action="Add">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Yazar Resmi</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="ImageUrl" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="ImageUrl"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Adı Soyadı</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="NameSurname" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="NameSurname"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mail Adresi</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Email" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="UserName" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="UserName"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Şifre</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" asp-for="PasswordHash" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="PasswordHash"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-11 col-sm-offset-2 text-center">
                                <a href="/Admin/Writer/Index" class="btn btn-info btn-sm" type="submit">İptal</a>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>