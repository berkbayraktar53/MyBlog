@model Comment
@{
    ViewData["Title"] = "Yorum Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <h5>Yorum Düzenle</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="CommentId" />
                        <input type="hidden" asp-for="AddedDate" />
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Eklenme Tarihi</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="AddedDate" asp-format="{0:dd/MM/yyyy HH:mm}" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Adı Soyadı</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="NameSurname" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="NameSurname"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mail Adresi</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Email" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Blog Başlığı</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.BlogId, (List<SelectListItem>)ViewBag.blogs, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Yorum Konusu</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Subject" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="Subject"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Yorum Mesajı</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" rows="4" cols="50" asp-for="Message"></textarea>
                                <span class="form-text m-b-none text-danger" asp-validation-for="Message"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-11 col-sm-offset-2 text-center">
                                <a href="/Admin/Comment/Index" class="btn btn-info btn-sm" type="submit">İptal</a>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>