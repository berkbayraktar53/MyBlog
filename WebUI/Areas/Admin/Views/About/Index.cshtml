@model List<About>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <a href="/Admin/About/Add" class="badge badge-primary" style="float:left">Hakkımda Ekle</a>
                        <h5>Hakkımda</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <th>Görsel</th>
                                    <th>Başlık</th>
                                    <th>İçerik</th>
                                    <th>Görüntüle</th>
                                    <th>Durum Değiştir</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var about in Model)
                                {
                                    <tr>
                                        <td>@about.AboutId</td>
                                        <td class="text-center"><img src="@about.Image" class="btn-circle" /></td>
                                        <td>@about.Title</td>
                                        <td>@about.Content.Substring(0, @about.Content.Substring(0, 50).LastIndexOf(" ")) ...</td>
                                        <td><a href="/About/Index" target="_blank" class="badge badge-secondary">Görüntüle</a></td>
                                        @if (about.Status == true)
                                        {
                                            <td><a href="/Admin/About/ChangeStatus/@about.AboutId" class="badge badge-success">Pasif Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/About/ChangeStatus/@about.AboutId" class="badge badge-info">Aktif Yap</a></td>
                                        }
                                        <td><a href="/Admin/About/Edit/@about.AboutId" class="badge badge-warning">Düzenle</a></td>
                                        <td><a href="/Admin/About/Delete/@about.AboutId" onclick="return confirm('Hakkımda silinecek. Onaylıyor musun?')" class="badge badge-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>