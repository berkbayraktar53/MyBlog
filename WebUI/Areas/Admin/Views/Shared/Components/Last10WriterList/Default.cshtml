@model List<User>
<div class="col-lg-8">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Son Eklenen Yazarlar</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-hover margin bottom">
                                <thead>
                                    <tr>
                                        <th class="text-center">Yazar Resmi</th>
                                        <th>Adı Soyadı</th>
                                        <th>Mail Adresi</th>
                                        <th>Kullanıcı Adı</th>
                                        <th class="text-center">Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td class="text-center"><img src="@user.ImageUrl" class="btn-circle" /></td>
                                            <td>@user.NameSurname</td>
                                            <td>@user.Email</td>
                                            <td>@user.UserName</td>
                                            @if (user.Status == true)
                                            {
                                                <td class="text-center"><i class="fa fa-check text-navy"></i></td>

                                            }
                                            else
                                            {
                                                <td class="text-center"><i class="fa fa-times text-danger"></i></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/Writer/Index" class="btn btn-light btn-block m-t">Tümünü Görüntüle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>