@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <h5>Şifre Değiştir</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form asp-action="ChangePassword">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Eski Şifreniz</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" asp-for="CurrentPassword" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="CurrentPassword"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Yeni Şifreniz</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" asp-for="NewPassword" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="NewPassword"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Yeni Şifreniz (tekrar)</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" asp-for="RePassword" autocomplete="off" />
                                <span class="form-text m-b-none text-danger" asp-validation-for="RePassword"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-11 col-sm-offset-2 text-center" style="margin-left:8px;">
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>