@model List<Role>
@{
    ViewData["Title"] = "Roller";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <a href="/Admin/AdminRole/Add" class="badge badge-primary" style="float:left">Rol Ekle</a>
                        <h5>Roller</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Rol Adı</td>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Id</td>
                                        <td>@role.Name</td>
                                        <td><a href="/Admin/AdminRole/Edit/@role.Id" class="badge badge-warning">Düzenle</a></td>
                                        <td><a href="/Admin/AdminRole/Delete/@role.Id" onclick="return confirm('Rol silinecek. Onaylıyor musun?')" class="badge badge-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>