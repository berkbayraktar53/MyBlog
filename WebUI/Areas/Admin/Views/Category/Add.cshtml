@model Category
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kategori Ekle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Category/Index">Kategoriler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Ekle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    @using (Html.BeginForm("Add", "Category", FormMethod.Post))
                    {
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Kategori Adı</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "Color:red" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Açıklama</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Description, "", new { @style = "Color:red" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 col-sm-offset-2" style="text-align:center">
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>