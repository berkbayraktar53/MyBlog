@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div style="text-align:center">
                        <a href="/Admin/Category/Add" class="badge badge-primary" style="float:left">Kategori Ekle</a>
                        <h5>Kategoriler</h5>
                    </div>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kategori Adı</th>
                                    <th>Açıklama</th>
                                    <th>Durum</th>
                                    <th>Durum Değiştir</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.CategoryId</td>
                                        <td>@category.CategoryName</td>
                                        <td>@category.Description</td>
                                        @if (category.Status == true)
                                        {
                                            <td class="text-center"><i class="fa fa-check text-navy"></i></td>
                                        }
                                        else
                                        {
                                            <td class="text-center"><i class="fa fa-times text-danger"></i></td>
                                        }
                                        @if (category.Status == true)
                                        {
                                            <td><a href="/Admin/Category/ChangeStatus/@category.CategoryId" class="badge badge-success">Pasif Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Admin/Category/ChangeStatus/@category.CategoryId" class="badge badge-info">Aktif Yap</a></td>
                                        }
                                        <td><a href="/Admin/Category/Edit/@category.CategoryId" class="badge badge-warning">Düzenle</a></td>
                                        <td><a href="/Admin/Category/Delete/@category.CategoryId" onclick="return confirm('Kategori silinecek. Onaylıyor musun?')" class="badge badge-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>