@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kategori Listesi</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin/Home/Index">Anasayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Kategoriler</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th>Durum</th>
                                <th>Durum Değiştir</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.CategoryName</td>
                                    <td>@category.Description</td>
                                    @if (category.Status == true)
                                    {
                                        <td>Aktif</td>
                                    }
                                    else
                                    {
                                        <td>Pasif</td>
                                    }
                                    @if (category.Status == true)
                                    {
                                        <td><a href="/Admin/Category/ChangeStatus/@category.CategoryId" class="badge badge-secondary">Pasif Yap</a></td>
                                    }
                                    else
                                    {
                                        <td><a href="/Admin/Category/ChangeStatus/@category.CategoryId" class="badge badge-primary">Aktif Yap</a></td>
                                    }
                                    <td><a href="/Admin/Category/Edit/@category.CategoryId" class="badge badge-warning">Düzenle</a></td>
                                    <td><a href="/Admin/Category/Delete/@category.CategoryId" onclick="return confirm('Kategori silinecek. Onaylıyor musun?')" class="badge badge-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div style="display:flex;justify-content:center;">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
            </div>
            <div style="display:flex;justify-content:center;">
                <a href="/Admin/Category/Add" class="btn btn-info">Yeni Kategori Ekle</a>
            </div>
        </div>
    </div>
</div>