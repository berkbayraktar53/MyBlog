@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link href="~/templates/blog/css/contact.css" rel='stylesheet' type='text/css' />
<section class="main-content-w3layouts-agileits">
    <h3 class="tittle">İletişim</h3>
    <p class="sub text-center">Soru, görüş ve öneri için mesaj gönderebilirsin</p>
    <div class="container">
        <div class="contact_grid_right">
            <form asp-action="Index">
                <div class="row contact_left_grid">
                    <div class="col-md-6 con-left">
                        <div class="form-group">
                            <label for="my-2">Ad Soyad</label>
                            <input class="form-control" type="text" asp-for="UserName" />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label>Mail Adresi</label>
                            <input class="form-control" type="email" asp-for="Email" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label for="validationCustom03 my-2">Konu</label>
                            <input class="form-control" type="text" asp-for="Subject" />
                            <span class="text-danger" asp-validation-for="Subject"></span>
                        </div>
                    </div>
                    <div class="col-md-6 con-right">
                        <div class="form-group">
                            <label>Mesaj</label>
                            <textarea id="textarea" asp-for="Message"></textarea>
                            <span class="text-danger" asp-validation-for="Message"></span>
                        </div>
                        <input class="form-control" type="submit" value="Gönder">
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>