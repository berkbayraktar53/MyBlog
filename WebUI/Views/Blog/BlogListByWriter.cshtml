@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="text-align:center">Yazarın Blogları</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Tarih</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <th>@blog.BlogId</th>
                            <td>@blog.Title</td>
                            <td>@blog.Date.ToShortDateString()</td>
                            <td>@blog.Category.Name</td>
                            <td>
                                @if (blog.Status)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pasif</span>
                                }
                            </td>
                            <td><a href="/Blog/Edit/@blog.BlogId" class="btn btn-gradient-warning">Düzenle</a></td>
                            <td><a href="/Blog/Delete/@blog.BlogId" onclick="return confirm('Silmek istediğine emin misin?');" class="btn btn-gradient-danger"><i class="mdi mdi-delete-forever"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Blog/Add" class="btn btn-gradient-info">Yeni Blog Ekle</a>
        </div>
    </div>
</div>