@model Writer
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Yazar Kayıt Sayfası</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using(Html.BeginForm("Register","Account",FormMethod.Post)){
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="Name">Ad Soyad</label>
							@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
						</div>
						<div class="col-md-6 mb-3">
							<label for="Email">Mail Adresi</label>
							@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="Password mb-2">Şifre</label>
							@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
							@Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
						</div>
						<div class="form-group col-md-6">
							<label for="PasswordAgain mb-2">Şifre Tekrar</label>
							@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
						</div>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4" style="margin:auto;display:block;">Kayıt Ol</button>
					<p>
						<a href="#" id="termsOfUse">Tüm şartları okudum, kabul ediyorum.</a>
					</p>
				}
			</div>
		</div>
	</div>
</section>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
	$('#termsOfUse').click(function(){
		swal("Site Kabul Şartları", "Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsüne varmadan gönderilmeye devam edilecektir. Eğer e-posta bülteninden çıkmak isterseniz mail ileti dizisini durdurabilirsiniz, şifre ve mail adresleriniz şifrelenmiş formatta herhangi bir kullanıcının görmeyeceği şekilde veri tabanlarımızda saklanmaktadır.");
	})
</script>