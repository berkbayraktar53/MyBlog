@model List<MessageFk>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">Gelen Mesajlar</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Writer/Dashboard">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mesajlar</li>
        </ol>
    </nav>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mesajı Gönderen</th>
                        <th>Mesaj Konusu</th>
                        <th>Mesaj Tarihi</th>
                        <th>Mesaj Detayı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        <tr>
                            <td><img src="@message.WriterSender.Image" alt="image" /> &nbsp; @message.WriterSender.Name</td>
                            <td>@message.Subject</td>
                            <td>@message.Date.ToString("dd/MM/yyyy - HH:mm")</td>
                            <td><a href="/Message/Detail/@message.MessageFkId" class="badge badge-success">Mesajı Aç</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>