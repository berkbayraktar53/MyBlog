@model Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">Yeni Mesaj Oluştur</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Message/InBox">Mesajlar</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj Gönder</li>
        </ol>
    </nav>
</div>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.Label("Alıcı")
                    @*@Html.TextBoxFor(x => x.Image, new { @class = "form-control" })*@
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    @Html.Label("Konu")
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Mesajınız")
                    @Html.TextAreaFor(x => x.Detail, 10, 3, new { @class = "form-control" })
                </div>
                <div style="text-align:center">
                    <button type="submit" class="btn btn-primary btn-rounded btn-fw mr-2" style="">Mesajı Gönder</button>
                </div>
            }
        </div>
    </div>
</div>