@model IEnumerable<Comment>
<div class="comment-top">
    @if (Model.Count() == 0)
    {
        <h4>İlk yorumu siz yapın</h4>
    }
    else
    {
        @foreach (var comment in Model)
        {
            <div class="media">
                <img src="~/templates/blog/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@comment.NameSurname</h5>
                    <p>@comment.Message</p>
                </div>
            </div>
        }
    }
</div>