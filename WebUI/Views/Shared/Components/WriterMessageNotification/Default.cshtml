@model List<MessageFk>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var message in Model)
    {
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="@message.WriterSender.Image" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@message.WriterSender.Name sana mesaj gönderdi</h6>
                <p class="text-gray mb-0">@message.Date.ToShortDateString()</p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center"><a href="/Notification/AllNotification">Tüm Mesajları Gör</a></h6>
</div>