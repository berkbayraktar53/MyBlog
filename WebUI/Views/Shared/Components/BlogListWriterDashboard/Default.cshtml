@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div style="text-align:center">
                    <h4 class="card-title">Siteye Eklenen Son 10 Blog</h4>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Görsel</th>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>Tarih</th>
                                <th>Görüntüle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model)
                            {
                                <tr>
                                    <td style="text-align:center"><img src="@blog.Image" class="mr-2" alt="image"></td>
                                    <td>@blog.Title</td>
                                    <td>@blog.Content.Substring(0, @blog.Content.Substring(0, 50).LastIndexOf(" ")) ...</td>
                                    <td> @(((DateTime)blog.ModifiedDate).ToString("dd/MM/yyyy")) </td>
                                    <td><a href="/Blog/Detail/@blog.BlogId" class="badge badge-success" target="_blank">Görüntüle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>