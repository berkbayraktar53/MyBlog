@model WriterProfileImage
@{
    ViewData["Title"] = "AddWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Ekle</h4>
                <br>
                @Html.HiddenFor(x=>x.WriterId)
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Adı</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        <input type="email" class="form-control" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" asp-for="Image" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        <textarea class="form-control" asp-for="About" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>