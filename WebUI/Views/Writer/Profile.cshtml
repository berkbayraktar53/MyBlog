@model User
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">Profil Bilgilerim</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Writer/Dashboard">Anasayfa</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profilim</li>
        </ol>
    </nav>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr style="text-align:center">
                        <th>Profil Resmi</th>
                        <th>Adı Soyadı</th>
                        <th>Hakkında</th>
                        <th>Email Adresi</th>
                        <th>Şifre</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="text-align:center">
                        @if (Model.ImageUrl == null)
                        {
                            <td class="text-center"><img src="~/templates/admin/img/profile1.png" class="btn-circle" /></td>
                        }
                        else
                        {
                            <td class="text-center"><img alt="resim" class="rounded-circle" width="48" height="48" src="@Model.ImageUrl" /></td>
                        }
                        <td>@Model.NameSurname</td>
                        <td>@Model.UserName</td>
                        <td>@Model.Email</td>
                        <td>*****</td>
                        <td><a href="/Writer/EditProfile/@Model.Id" class="badge badge-warning">Düzenle</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>